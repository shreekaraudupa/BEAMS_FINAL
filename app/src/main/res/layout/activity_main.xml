<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shree.beams_final.MainActivity">


    <include layout="@layout/app_bar_layout"
        android:id="@+id/main_page_toolbar"
    />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Projects"
        android:textColor="#000"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="100dp"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.Year "
        android:textSize="25dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="15dp"
        android:textColor="#111"
        android:id="@+id/textView9" />
    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="15dp"
        android:weightSum="1"
        android:id="@+id/rgYear">

        <RadioButton
            android:id="@+id/rb2017"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:checked="true"
            android:text="2017"
            android:textSize="25dp" />

    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.Type of work "
        android:textSize="25dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="15dp"
        android:textColor="#111"/>
    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="15dp"
        android:weightSum="1"
        android:id="@+id/rgType">


        <RadioButton
            android:id="@+id/rbRoad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:checked="true"
            android:text="Road"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/rbBridge"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.13"
            android:checked="false"
            android:text="Bridge"
            android:textSize="25dp" />
        <RadioButton
            android:id="@+id/rbAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:text="All"
            android:textSize="25dp" />

    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.Constituency  "
        android:textSize="25dp"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="15dp"
        android:textColor="#111"/>
    <RadioGroup
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="15dp"
        android:weightSum="1"
        android:id="@+id/rgConst">

        <RadioButton
            android:id="@+id/rbMumbai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:checked="true"
            android:text="Mumbai"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/rbNashik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.13"
            android:checked="false"
            android:text="Nashik"
            android:textSize="25dp" />
        <RadioButton
            android:id="@+id/rbAurangabad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Aurangabad"
            android:textSize="25dp" />

    </RadioGroup>
    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="65dp"
        android:layout_height="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="63dp"
        android:text="TextView"
        android:textColor="#111"
        android:textSize="15dp" />



    <Button
        android:id="@+id/btnParseJson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:background="@color/colorPrimaryDark"
        android:text="Done"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btnGetJson"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignEnd="@+id/textView9"
        android:layout_alignParentBottom="true"
        android:text="G" />


</RelativeLayout>
